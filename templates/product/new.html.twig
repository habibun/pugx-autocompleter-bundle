{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
    <h1>Create new Product</h1>

    {{ include('product/_form.html.twig') }}

    <a href="{{ path('app_category_search') }}" id="url-list" class="hidden"></a>
    <a href="{{ path('app_category_show') }}" id ="url-get" class="hidden"></a>

    <a href="{{ path('app_product_index') }}">back to list</a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>



        $(document).ready(function() {
            console.log('jquery loaded in product new page');

            $("#product_category").click(function(){
                console.log("The product_category was clicked.");
            });

            $( function() {
                var options = {
                    url_list: $('#url-list').attr('href'),
                    url_get: $('#url-get').attr('href'),
                    otherOptions: {
                        minimumInputLength: 1,
                        theme: 'boostrap',
                        formatNoMatches: 'No author found.',
                        formatSearching: 'Searching authors...',
                        formatInputTooShort: 'Insert at least 1 character'
                    }
                };
                $('#product_category').autocompleter(options);
            } );
        });





    </script>
{% endblock %}
